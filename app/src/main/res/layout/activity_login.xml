<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_margin="16dp"
            app:cardCornerRadius="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:padding="16sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:id="@+id/title_dropback"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/tour"/>

                <TextView
                    android:layout_below="@id/title_dropback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:id="@+id/title_tv"
                    android:textSize="29sp"
                    android:text="Welcome user!"/>

                <TextView
                    android:layout_marginTop="20sp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_tv"
                    android:id="@+id/ques_tv"
                    android:text="Login"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username_til"
                    android:layout_marginStart="16sp"
                    android:layout_marginEnd="16sp"
                    android:layout_marginTop="25sp"
                    android:layout_below="@+id/ques_tv">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:hint="Enter your name"
                        android:id="@+id/username_tv" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/password_til"
                    android:layout_marginStart="16sp"
                    android:layout_marginEnd="16sp"
                    android:layout_below="@+id/username_til"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:id="@+id/password_tv" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_margin="16sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/password_til"
                    android:layout_width="wrap_content"
                    android:id="@+id/login_button"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:background="@android:color/holo_blue_light"
                    android:textColor="#FFFFFF"
                    android:padding="16sp"
                    />

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/login_button"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/register_button"
                    android:layout_height="wrap_content"
                    android:text="New User?"
                    android:textColor="@android:color/holo_purple"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/total"
                    android:padding="16sp"
                    android:gravity="center"
                    android:text="Total number of users registered "
                    android:layout_below="@+id/register_button"
                    />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
